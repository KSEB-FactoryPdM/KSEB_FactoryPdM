{
  "id": null,
  "title": "Serve ML Predictions",
  "folders": "Sensors",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "time": {"from": "now-1h", "to": "now"},
  "panels": [
    {
      "type": "timeseries",
      "title": "Anomaly Confidence",
      "gridPos": {"h": 9, "w": 24, "x": 0, "y": 0},
      "datasource": {"type": "postgres", "uid": "TimescaleDB"},
      "targets": [
        {
          "format": "time_series",
          "rawQuery": true,
          "refId": "A",
          "sql": "SELECT time AS time, confidence AS value, equipment_id AS metric FROM serve_ml_predictions WHERE $__timeFilter(time) ORDER BY time"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Anomaly Count (Last 1h)",
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 9},
      "datasource": {"type": "postgres", "uid": "TimescaleDB"},
      "targets": [
        {
          "format": "table",
          "rawQuery": true,
          "refId": "B",
          "sql": "SELECT COUNT(*) FROM serve_ml_predictions WHERE $__timeFilter(time) AND is_anomaly = true"
        }
      ]
    },
    {
      "type": "table",
      "title": "Latest Predictions",
      "gridPos": {"h": 9, "w": 24, "x": 0, "y": 13},
      "datasource": {"type": "postgres", "uid": "TimescaleDB"},
      "targets": [
        {
          "format": "table",
          "rawQuery": true,
          "refId": "C",
          "sql": "SELECT time, equipment_id, power, model_version, is_anomaly, confidence FROM serve_ml_predictions WHERE $__timeFilter(time) ORDER BY time DESC LIMIT 100"
        }
      ]
    }
  ]
}


