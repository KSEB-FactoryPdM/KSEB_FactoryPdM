          "unit": "short"
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "x"},
              "properties": [{"id": "color", "value": {"fixedColor": "#3a6ea5", "mode": "fixed"}}]
          },
          {
            "matcher": {"id": "byName", "options": "y"},
            "properties": [{"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}]
