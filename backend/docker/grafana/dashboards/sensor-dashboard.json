          {
            "matcher": {"id": "byName", "options": "z"},
            "properties": [{"id": "color", "value": {"fixedColor": "blue", "mode": "fixed"}}]
          }
        ]
      },
      "options": {
        "legend": {"calcs": ["mean", "lastNotNull"], "displayMode": "list", "placement": "bottom", "showLegend": true},
        "tooltip": {"mode": "multi", "sort": "none"}
