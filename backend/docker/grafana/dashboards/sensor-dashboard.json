        {
          "refId": "A",
          "editorMode": "code",
          "format": "time_series",
          "rawQuery": true,
          "rawSql": "SELECT time, sensor_type as metric, value FROM sensor_data WHERE device = '${device}' AND sensor_type IN ('x', 'y', 'z') AND time > NOW() - INTERVAL '5 minutes' ORDER BY time"
